FROM vectorforge:latest

USER root

COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

COPY pyproject.toml uv.lock ./

RUN uv sync --frozen

# Temporarily un-comment tests/ directory in .dockerignore
COPY tests/ ./tests/
COPY pytest.ini ./

CMD ["sh", "-c", "ulimit -n 65536 && .venv/bin/pytest tests/ -v"]
